{
  "name": "ircapp",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "dev:local": "next dev",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p ${PORT:-3000}",
    "start:local": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "irc:start": "tsx src/irc-server/start-server.ts",
    "irc:dev": "tsx watch src/irc-server/start-server.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run irc:dev\"",
    "bot:start": "node src/bridge/webapp-bot.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run irc:dev\" \"npm run bot:start\"",
    "railway:all": "concurrently \"npm run start\" \"npm run irc:start\" \"npm run bot:start\"",
    "create-bot": "tsx scripts/create-bot-user.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@prisma/client": "^5.21.1",
    "@tanstack/react-query": "^5.59.0",
    "@tanstack/react-query-devtools": "^5.59.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "irc-framework": "^4.14.0",
    "lucide-react": "^0.552.0",
    "next": "16.0.0",
    "next-auth": "^5.0.0-beta.29",
    "prisma": "^5.21.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "^5.5.0",
    "tsx": "^4.20.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@railway/cli": "^4.11.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "prisma": "^5.21.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
